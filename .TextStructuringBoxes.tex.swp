\newcommand{\important}[1]{
	 \fcolorbox{black}{black}{ %
		\parbox{17cm}{%
			\vspace{0.1cm}
			\hspace{0.1cm}
   			\transparent{1.0}
			\color{white}
			\fontsize{12}{14} \selectfont #1
			\vspace{0.1cm}
   		}
    }
    \vspace{0.1cm}
    \newline
}

