%%% img command %%%
% @param #1: image path
% @param #2: description
% @param #3: textwidth factor
% @param #4: name
\newcommand{\img}[4]{
 	\begin{figure}[H]
		\centering
		\includegraphics[width={#3}\pagewidth]{{#1}}
		\caption{#2}
		\label{#4}
	\end{figure}
}