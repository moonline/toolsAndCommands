%listen und aufz√§hlungen
\usepackage{paralist}
\usepackage{mdwlist}

% unordered list
\newcommand{\uli}[1]{%
	\begin{itemize}%
		{#1}%
	\end{itemize}%
}
\newcommand{\ul}{%
	\begin{itemize}%
}
\newcommand{\ulE}{%
	\end{itemize}%
}

% ordered list
\newcommand{\oli}[1]{%
	\begin{enumerate}%
		{#1}%
	\end{enumerate}%
}
\newcommand{\ol}{%
	\begin{enumerate}%
}
\newcommand{\olE}{%
	\end{enumerate}%
}
\newcommand{\olR}{%
	\resume{enumerate}%
}
\newcommand{\olS}{%
	\suspend{enumerate}%
}
\newcommand{\olp}[1]{%
	\resume{enumerate}%
		{#1}%
	\suspend{enumerate}%
}

% list items
\newcommand{\li}{%
	\item%
}

% definition list
\newcommand{\dli}[1]{%
	\begin{description}%
		{#1}%
	\end{description}%
}
\newcommand{\dl}{%
	\begin{description}%
}
\newcommand{\di}[1]{%
	\item[#1]%
}
\newcommand{\dlE}{%
	\end{description}%
}

% symbols
\newcommand{\ra}{%
	$\rightarrow$%
}

% chapter and section shortcuts
\newcommand{\ch}[1]{%
	\chapter{#1}%
}
\newcommand{\se}[1]{%
	\section{#1}%
}
\newcommand{\sse}[1]{%
	\subsection{#1}%
}
\newcommand{\sss}[1]{%
	\subsubsection{#1}%
}

